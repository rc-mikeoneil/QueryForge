{
  "operators": {
    "equality": {
      "operators": ["=", "==", "equals"],
      "normalized": "=",
      "description": "Exact match comparison",
      "compatible_types": ["string", "number", "boolean", "ip"],
      "example": "process_name = 'cmd.exe'"
    },
    "inequality": {
      "operators": ["!=", "<>", "not equals"],
      "normalized": "!=",
      "description": "Not equal comparison",
      "compatible_types": ["string", "number", "boolean", "ip"],
      "example": "status != 'success'"
    },
    "greater_than": {
      "operators": [">", "gt"],
      "normalized": ">",
      "description": "Greater than comparison",
      "compatible_types": ["number", "datetime"],
      "example": "port > 1024"
    },
    "greater_equal": {
      "operators": [">=", "gte"],
      "normalized": ">=",
      "description": "Greater than or equal comparison",
      "compatible_types": ["number", "datetime"],
      "example": "count >= 10"
    },
    "less_than": {
      "operators": ["<", "lt"],
      "normalized": "<",
      "description": "Less than comparison",
      "compatible_types": ["number", "datetime"],
      "example": "severity < 5"
    },
    "less_equal": {
      "operators": ["<=", "lte"],
      "normalized": "<=",
      "description": "Less than or equal comparison",
      "compatible_types": ["number", "datetime"],
      "example": "duration <= 3600"
    },
    "contains": {
      "operators": ["contains", "has"],
      "normalized": "contains",
      "description": "String contains substring (case-insensitive)",
      "compatible_types": ["string"],
      "example": "command_line contains 'powershell'"
    },
    "startswith": {
      "operators": ["startswith", "starts_with", "begins_with"],
      "normalized": "startswith",
      "description": "String starts with prefix",
      "compatible_types": ["string"],
      "example": "file_path startswith 'C:\\Windows\\Temp'"
    },
    "endswith": {
      "operators": ["endswith", "ends_with"],
      "normalized": "endswith",
      "description": "String ends with suffix",
      "compatible_types": ["string"],
      "example": "file_name endswith '.exe'"
    },
    "in": {
      "operators": ["in", "IN"],
      "normalized": "IN",
      "description": "Value is in a list",
      "compatible_types": ["string", "number", "ip"],
      "example": "process_name IN ('cmd.exe', 'powershell.exe', 'wscript.exe')"
    },
    "not_in": {
      "operators": ["not in", "NOT IN"],
      "normalized": "NOT IN",
      "description": "Value is not in a list",
      "compatible_types": ["string", "number", "ip"],
      "example": "status NOT IN ('success', 'completed')"
    },
    "regex": {
      "operators": ["=~", "matches", "regex"],
      "normalized": "=~",
      "description": "Regular expression match",
      "compatible_types": ["string"],
      "example": "command_line =~ /powershell.*-enc.*/i"
    },
    "not_regex": {
      "operators": ["!~", "not matches"],
      "normalized": "!~",
      "description": "Regular expression does not match",
      "compatible_types": ["string"],
      "example": "user_agent !~ /bot|crawler/i"
    },
    "wildcard": {
      "operators": ["*", "wildcard"],
      "normalized": "*",
      "description": "Wildcard pattern matching (* for any characters)",
      "compatible_types": ["string"],
      "example": "file_path = 'C:\\Users\\*\\AppData\\*'"
    },
    "exists": {
      "operators": ["exists", "is not null"],
      "normalized": "EXISTS",
      "description": "Field exists and is not null",
      "compatible_types": ["all"],
      "example": "parent_process_id EXISTS"
    },
    "not_exists": {
      "operators": ["not exists", "is null"],
      "normalized": "NOT EXISTS",
      "description": "Field does not exist or is null",
      "compatible_types": ["all"],
      "example": "parent_process_id NOT EXISTS"
    }
  },
  "logical_operators": {
    "and": {
      "operators": ["AND", "and", "&&"],
      "normalized": "AND",
      "description": "Logical AND - both conditions must be true"
    },
    "or": {
      "operators": ["OR", "or", "||"],
      "normalized": "OR",
      "description": "Logical OR - at least one condition must be true"
    },
    "not": {
      "operators": ["NOT", "not", "!"],
      "normalized": "NOT",
      "description": "Logical NOT - negates the condition"
    }
  },
  "normalization_rules": {
    "case_insensitive": true,
    "trim_whitespace": true,
    "quote_string_values": true,
    "escape_special_chars": ["'", "\\", "\n", "\r", "\t"]
  }
}
