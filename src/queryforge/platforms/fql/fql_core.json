{
  "platform": "CrowdStrike Falcon Query Language (FQL)",
  "platform_key": "fql",
  "version": "1.0.0",
  "description": "CrowdStrike Falcon Query Language for threat hunting and investigation",
  "default_dataset": "events",
  "datasets": [
    {
      "name": "events",
      "display_name": "Events",
      "description": "Generic event stream (placeholder until real schema available)",
      "category": "telemetry"
    },
    {
      "name": "detections",
      "display_name": "Detections",
      "description": "Detection events from Falcon platform",
      "category": "alerts"
    },
    {
      "name": "indicators",
      "display_name": "Indicators",
      "description": "Indicator of Compromise (IoC) data",
      "category": "threat_intel"
    }
  ],
  "query_syntax": {
    "comment": "Placeholder FQL syntax patterns - to be updated with official documentation",
    "basic_filter": "field_name = 'value'",
    "boolean_and": "condition1 AND condition2",
    "boolean_or": "condition1 OR condition2",
    "negation": "NOT condition",
    "wildcard": "field_name = '*pattern*'",
    "regex": "field_name =~ /pattern/",
    "time_filter": "event_time >= 'timestamp'",
    "projection": "| select field1, field2, field3",
    "limit": "| limit 100"
  },
  "features": {
    "supports_time_range": true,
    "supports_projection": true,
    "supports_aggregation": true,
    "supports_joins": false,
    "supports_regex": true,
    "supports_wildcards": true,
    "case_sensitive": false
  }
}
